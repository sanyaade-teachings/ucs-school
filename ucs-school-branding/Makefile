BUILD_DIR := umc/
INST_DIR := $(DESTDIR)/usr/share/univention-management-console-frontend/js/umc/i18n

.PHONY: build
build: l10n

.PHONY: l10n
l10n:
	mkdir -p $(BUILD_DIR)
	dh-umc-translate -l en -l de -p ucs-school-branding -o $(BUILD_DIR)

.PHONY: install
install: build
	mkdir -p $(INST_DIR)
	@# install JSON translation file for framework
	for i in "$(BUILD_DIR)/"*.json; do \
		lang=$${i##*/}; \
		lang=$${lang%.*}; \
		mkdir -p "$(INST_DIR)/$$lang"; \
		cp $$i "$(INST_DIR)/$$lang/branding.json"; \
	done

.PHONY: clean
clean:
	$(RM) $(BUILD_DIR)/*.json
